<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.thkoeln.swp.wawi.admingui.controllers.KategorieDialogController">
    <children>
        <Text layoutY="14.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" textOrigin="TOP"
              wrappingWidth="600.0" fx:id="title">
            <font>
                <Font size="22.0"/>
            </font>
        </Text>
        <ChoiceBox layoutX="36.0" layoutY="77.0" prefHeight="25.0" prefWidth="233.0" fx:id="parentCategoryChoiceBox"/>
        <TextField layoutX="36.0" layoutY="126.0" prefHeight="25.0" prefWidth="233.0" promptText="Name" fx:id="name"/>
        <TextArea layoutX="36.0" layoutY="168.0" prefHeight="162.0" prefWidth="530.0" wrapText="true"
                  promptText="Beschreibung" fx:id="description"/>
        <ToolBar layoutY="360.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="600.0">
            <items>
                <Button mnemonicParsing="false" style="-fx-background-color: #2c6c99#2c6c99; -fx-cursor: hand;"
                        text="Speichern" textFill="WHITE" onAction="#einreichen">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                        style="-fx-background-color: #888888; -fx-cursor: hand;" text="Abbrechen" onAction="#schliessen"
                        textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
            </items>
        </ToolBar>
    </children>
</AnchorPane>
